{
    "buildCommand": "pip install -r backend/requirements.txt && python backend/create_tables.py && npm run build",
    "outputDirectory": "frontend/build",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "functions": {
        "api/**/*.py": {
            "runtime": "python3.9",
            "maxDuration": 60
        }
    }
}
